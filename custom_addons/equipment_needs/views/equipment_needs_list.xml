<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_equipment_needs_list" model="ir.ui.view">
        <field name="name">equipment.needs.list</field>
        <field name="model">equipment.needs</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Equipment needs" decoration-danger="quantity &lt;=0 or unit_cost &lt;=0">
                <field name="equipment"/>
                <field name="quantity"/>
                <field name="unit_cost"/>
                <field name="total_cost"/>
                <field name="approval_status_id"></field>
                <field name="functional_area_id"></field>
            </list>
        </field>
    </record>
</odoo>
