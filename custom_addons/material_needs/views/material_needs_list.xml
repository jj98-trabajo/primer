<odoo>
  <record id="view_list_material_needs" model="ir.ui.view">
    <field name="name">material.needs.list</field>
    <field name="model">material_needs.material_needs</field>
    <field name="arch" type="xml">
      <list string="Material Needs">
        <field name="id" readonly="1"></field>
        <field name="material_name"></field>
        <field name="quantity"></field>
        <field name="unit_cost"></field>
        <field name="total_cost"></field>
        <field name="approval_status_id"></field>
        <field name="functional_area_id"></field>
      </list>
    </field>
  </record>
</odoo>
